                android:id="@+id/btn16"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:background="@drawable/animacion_carta"
                android:layout_margin="5dp"/>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>