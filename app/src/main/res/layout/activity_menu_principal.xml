<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipalActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:background="#ffffff"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:text="Numeros y Vocales"
                android:textSize="20dp"
                android:enabled="false"
                android:textColor="#ffffff"
                android:background="@drawable/custom_button_two_colors"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:textAllCaps="false"
                        android:background="@drawable/custom_button_circular"
                        android:src="@drawable/ic_leccion"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:padding="17dp"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:paddingLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leccion"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    >

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:textAllCaps="false"
                        android:background="@drawable/custom_button_circular"
                        android:src="@drawable/ic_ejercicio"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:padding="11dp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Actividad"
                            android:paddingRight="7dp"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:gravity="center"
                >

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:textAllCaps="false"
                    android:background="@drawable/custom_button_circular"
                    android:src="@drawable/ic_examen"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:padding="18dp"
                    />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Examen"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:text="Abecedario"
                android:textSize="20dp"
                android:enabled="false"
                android:textColor="#ffffff"
                android:background="@drawable/custom_button_two_colors"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:textAllCaps="false"
                        android:background="@drawable/custom_button_circular"
                        android:src="@drawable/ic_leccion"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:padding="17dp"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:paddingLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leccion"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    >

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:textAllCaps="false"
                        android:background="@drawable/custom_button_circular"
                        android:src="@drawable/ic_ejercicio"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:padding="11dp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Actividad"
                            android:paddingRight="7dp"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:gravity="center"
                >

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:textAllCaps="false"
                    android:background="@drawable/custom_button_circular"
                    android:src="@drawable/ic_examen"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:padding="18dp"
                    />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Examen"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:text="Palabras Clave"
                android:textSize="20dp"
                android:enabled="false"
                android:textColor="#ffffff"
                android:background="@drawable/custom_button_two_colors"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:textAllCaps="false"
                        android:background="@drawable/custom_button_circular"
                        android:src="@drawable/ic_leccion"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:padding="17dp"
                        />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:paddingLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leccion"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    >

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:textAllCaps="false"
                        android:background="@drawable/custom_button_circular"
                        android:src="@drawable/ic_ejercicio"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:padding="11dp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Actividad"
                            android:paddingRight="7dp"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:gravity="center"
                >

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:textAllCaps="false"
                    android:background="@drawable/custom_button_circular"
                    android:src="@drawable/ic_examen"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:padding="18dp"
                    />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Examen"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>