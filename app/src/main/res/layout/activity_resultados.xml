<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Resultados">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="15dp"
            >

            <ImageView
                android:id="@+id/imagen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:srcCompat="@drawable/user_nav"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/lblNombreR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="@string/nav_header_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:gravity="center"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btnActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:enabled="false"
            android:textColor="#ffffff"
            android:background="@drawable/custom_button_two_colors"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/lblPuntos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Resultado :"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/lblMaximo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Puntaje MÃ¡ximo :"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20dp"/>
        </LinearLayout>


        <Button
            android:id="@+id/btnAceptarR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Aceptar"
            android:textSize="25dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/custom_button_two_colors"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>